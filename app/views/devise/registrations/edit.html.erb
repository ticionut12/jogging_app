<h2 class="font-monospace border border-dark bg-warning bg-gradient text-dark rounded" style="width: 14rem;">Edit Profile <% resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field form-group" style="width: 20rem;">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field form-group" style="width: 20rem;">
    <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
    <%= f.password_field :password, autocomplete: "new-password", class:"form-control" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>

  <div class="field form-group" style="width: 20rem;">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control" %>
  </div>

  <div class="field form-group" style="width: 20rem;">
    <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password", class:"form-control" %>
  </div>

  <div class="actions">
    <%= f.submit "Update", class:"btn btn-success border border-dark" %>
  </div>
<% end %>

<div class="font-monospace text-dark rounded">
  <p><h3>You can cancel your account anytime:</h3> <%= button_to "Cancel my account!", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class:"btn btn-danger border border-dark rounded" %></p>
</div>
 <br/>

<%= link_to "Back", :back, class:"btn btn-secondary border border-dark" %>
